@model NeYapsak.PL.Models.PasswordResetViewModel

@{
    ViewBag.Title = "Şifre Sıfırlama";
    Layout = "~/Views/Shared/_Layout-4-ForAccount.cshtml";
}

<h2>Şifre Sıfırlama</h2>
@using (Html.BeginForm("PasswordReset", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group col-xs-12 col-md-6 text-center">
        <label>E-Posta Adresin</label>
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", required = true, type = "email", disabled = "disabled" } })
        @Html.HiddenFor(model=>model.Email)
        @Html.HiddenFor(model=>model.Code)
        @Html.ValidationMessageFor(model => model.Email)
    </div> <!-- form-group// -->
    <div class="form-group col-xs-12 col-md-6 text-center">
        <label>Yeni Şifren</label>@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", required = true } })
        @Html.ValidationMessageFor(model => model.Password)
    </div> <!-- form-group// -->
    <div class="form-group col-xs-12 col-md-6 text-center">
        <label>Yeni Şifren(Tekrar)</label>@Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", required = true } })
        @Html.ValidationMessageFor(model => model.ConfirmPassword)
    </div> <!-- form-group// -->
    <div class="form-group col-xs-12 col-md-offset-3 col-md-6 text-center">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <input class="tutorials-link-logreg" type="submit" id="Onayla" value="Onayla" />
    </div> <!-- form-group// -->
}