                        @if (Model.Katilanlar.Where(i => i.Onay == true && i.Silindi == false).Count() == 0)
                        {
                            <table class="table">
                                <thead>
                                    <tr>Etkinliğine Katılan Yok</tr>
                                </thead>
                                <tbody>
                            </table>
                        }
                        else if (Model.Katilanlar.Where(i => i.Onay == true && i.Silindi == false).Count() != 0)
