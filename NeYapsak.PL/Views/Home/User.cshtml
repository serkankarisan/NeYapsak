
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout-3-TopMenu-User.cshtml";
}

<div class="container emp-profile">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                @{NeYapsak.PL.Models.UserViewModel item = new NeYapsak.PL.Models.UserViewModel();
                    item = ViewBag.user;
                }
                <img class="rounded-circle" style="height:250px" src="@item.Kullanici.ProfilAvatarYolu" alt="">
                <div class="file btn btn-lg btn-primary">
                    Fotoğrafı Değiştir
                    <input type="file" name="file" /><!--kişi kendi sayfasına gelince çıkacak olan-->
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="profile-head tab-content profile-tab">
                <div class="row">
                    <div class="col-md-6">
                        <label>Adı</label>
                    </div>
                    <div class="col-md-6">
                        <p>@item.Kullanici.Name</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Soyadı</label>
                    </div>
                    <div class="col-md-6">
                        <p>@item.Kullanici.Surname</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>E-Posta</label>
                    </div>
                    <div class="col-md-6">
                        <p>@item.Kullanici.Email</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Yaş</label>
                    </div>
                    <div class="col-md-6">
                        <p>@(Convert.ToInt32(DateTime.Now.Year - item.Kullanici.DogumTarihi.Year))</p>
                    </div>
                </div>
            </div>
            <p class="text-normal cs-renk-tab">@item.Kullanici.Bio</p>
            <p class="text-normal cs-renk-tab">Düzenlediği: <span class="font-weight-bold">@item.KullaniciIlanlari.Where(i => i.Silindi == false && i.Yayindami == true).Count()</span>&nbsp;&nbsp; Katıldığı: <span class="font-weight-bold">@item.KatildigiIlanlar.Count()</span>&nbsp;&nbsp;İlgilendiği:<span class="font-weight-bold">@item.IlgilendigiIlanlar.Count()</span>&nbsp;&nbsp;Onayımı Bekleyen:<span class="font-weight-bold">@item.KullaniciIlanlari.Where(i => i.Silindi == false && i.Yayindami == false).Count()</span></p>
        </div>
        <div class="col-md-2">
            <!--şimdilikboş-->
        </div>
    </div>
    <div class="row">
        <!--kişi kendi sayfasına gelince çıkacak olan-->
        <div class="col-md-4">
            <div class="row justify-content-center">
                <button type="button" name="button" class="btn cs-arka-renk btn-sm mb-1 ">Hakkımdayı Düzenle</button>
            </div>
        </div>
